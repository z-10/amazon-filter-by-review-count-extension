{
  "manifest_version": 3,
  "name": "Amazon Filter by Reviews",
  "version": "1.1",
  "description": "Hide Amazon products with few reviews",
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["storage"]
}
